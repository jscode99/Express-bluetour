<body>
  <section>
    <div class="container">
      <div class="user signinBx">
        <div class="imgBx">
          <img
            src="https://images.unsplash.com/photo-1562497702-fc536785e611?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8ODR8fGtlcmFsYSUyMDQwMCo1MDB8ZW58MHx8MHw%3D&auto=format&fit=crop&w=500&q=60"
            alt=""
          />
        </div>
        <div class="formBx">
          <form action="" onsubmit="return false;">
            <h1>
              Welcome to Bluetours
            </h1>
            <a href="/google" class="btn btn-danger">
              <span class="fa fa-google-plus"></span>
              Google
            </a>
            <h2>
              Sign In
            </h2>
            <input type="email" name="" placeholder="Email address" />
            <input type="password" name="" placeholder="Password" />
            <input type="submit" name="" value="Login" />
            <p class="signup">
              Don't have an account ?
              <a href="#" onclick="toggleForm();">
                Sign Up
              </a>
            </p>
          </form>
        </div>
      </div>
      <div class="user signupBx">
        <div class="formBx">
          <form action="" onsubmit="return false;">
            <h2>
              Create an account
            </h2>
            <input type="text" name="" placeholder="Fullname" />
            <input type="email" name="" placeholder="Email Address" />
            <input type="password" name="" placeholder="Create Password" />
            <input type="password" name="" placeholder="Confirm Password" />
            <input type="submit" name="" value="Sign Up" />
            <p class="signup">
              Already have an account ?
              <a href="#" onclick="toggleForm();">
                Sign in
              </a>
            </p>
          </form>
        </div>
        <div class="imgBx">
          <img
            src="https://images.unsplash.com/photo-1576586488520-8d5a353ab564?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTE1fHxrZXJhbGElMjA0MDAqNTAwfGVufDB8fDB8&auto=format&fit=crop&w=500&q=60"
            alt=""
          />
        </div>
      </div>
    </div>
  </section>
</body>